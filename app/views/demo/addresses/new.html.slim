.container
  h1 New Address
  
  - if @city
    = form_for([@city, @address], html: { class: 'form-horizontal' }) do |f|
      = render 'form', demo_city: @city, demo_address: @address, f: f
  - else
    = form_for( [@address], html: { class: 'form-horizontal' }) do |f|
      = render 'form', demo_city: @city, demo_address: @address, f: f
  / = render 'form', demo_city: @city, demo_address: @address
